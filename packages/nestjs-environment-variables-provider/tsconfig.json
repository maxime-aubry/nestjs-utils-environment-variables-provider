{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "auto",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "types": [],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist"]
}